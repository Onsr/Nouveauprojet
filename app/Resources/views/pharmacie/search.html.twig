{% extends 'dashboard.html.twig' %}

{% block fos_user_content %}
    <div>
        <section>
            <ol class="breadcrumb active">
                <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="{{ path('pharmacie_index') }}"> Liste Pharmacie </a></li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h1 class="box-title"><strong> Liste Pharmacie </strong></h1>
                            <ul class="nav nav-tabs">
                                <li class="pull-right">
                                    <a href="#" class="text-muted">
                                        <div class="box-tools">
                                            <div class="input-group input-group-sm" style="width: 150px;">
                                                <form method="POST">
                                                    <h1 class="box-title"><strong> Pharmacie ID </strong></h1>
                                                    <input type="text"  name="id" class="form-control pull-right" placeholder="Search">
                                                    <div class="input-group-btn">
                                                        <button type="submit" class="btn btn-default" value="search" ><i class="fa fa-search"></i></button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="box-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Adresse</th>
                                    <th>Gouvernorat</th>
                                    <th>Fixe</th>
                                    <th>Fax</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for pharmacie in pharmacies %}
                                    <tr>
                                        <td><a href="{{ path('pharmacie_show', { 'id': pharmacie.id }) }}">{{ pharmacie.id }}</a></td>
                                        <td>{{ pharmacie.nom }}</td>
                                        <td>{{ pharmacie.adresse }}</td>
                                        <td>{{ pharmacie.gouvernorat }}</td>
                                        <td>{{ pharmacie.fixe }}</td>
                                        <td>{{ pharmacie.fax }}</td>
                                        <td>{{ pharmacie.mobile }}</td>
                                        <td>{{ pharmacie.email }}</td>
                                        <td>
                                            <div class="margin">
                                                <div class="btn-group">
                                                    {#pop upp affichage #}
                                                    <button type="button" class="pull-left btn  btn-primary btn-sm" data-toggle="modal" data-target="#myModal{{ pharmacie.id }}">  <i class="fa fa-sticky-note-o"></i> Afficher </button>
                                                    <div class="modal fade" id="myModal{{ pharmacie.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <br><br><br><br>
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                    <h4 class="modal-title" id="myModalLabel"> les Informations de  : {{ pharmacie.nom }}  </h4>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="row">
                                                                        <div class="col-lg-6">
                                                                            <ul>
                                                                                <li><strong>Nom :</strong> {{ pharmacie.nom }}</li> <br>
                                                                                <li><strong>Adresse :</strong> {{ pharmacie.adresse }}</li><br>
                                                                                <li><strong>Gouvernorat :</strong> {{ pharmacie.gouvernorat }}</li><br>
                                                                                <li><strong>Fixe :</strong> {{ pharmacie.fixe }}</li><br>
                                                                                <li><strong>Fax :</strong> {{ pharmacie.fax }}</li><br>
                                                                                <li><strong>Mobile :</strong> {{ pharmacie.mobile }}</li><br>
                                                                                <li><strong>Email :</strong> {{ pharmacie.email }}</li><br>
                                                                                <li><strong> Fax :</strong> {{ pharmacie.fax }}</li><br>
                                                            
                                                                            </ul>
                                                                        </div>
                                                                        <div class="col-lg-6">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {#endpop up affichage#}
                                                    <br>
                                                    <a href="{{ path('pharmacie_edit', { 'id': pharmacie.id }) }}" class="pull-right btn btn-warning  btn-sm">
                                                        <i class="fa  fa-pencil-square-o"></i> Modifier
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="btn-group">
                                <a href="{{ path('pharmacie_index') }}" class="pull-right btn btn-info  btn-sm">
                                    <i class="fa fa-reply"></i> Retour Ã  la liste
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
