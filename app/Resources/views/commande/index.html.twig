{% extends 'dashboard.html.twig' %}

{% block fos_user_content %}
    <section class="content">
        <div class="row">
            <div class="col-md-11">
                <div class="box">
                    <div class="box-header">
                        <h1 class="box-title"> Liste des commandes</h1>
                        <a href="#" class="pull-right btn btn-info  btn-sm">
                            <i class="fa fa-search"></i> Rechercher
                        </a>
                    </div>
    <div class="box-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de client</th>
                <th>Code Commande</th>
                <th>Date</th>
                <th>Montant Total</th>
                <th>Adresse</th>
                <th>Désicion</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{{ commande.user }}</td>
                <td>{{ commande.codeC }}</td>
                {#<td>{% if commande.dateC %}{{ commande.dateC|date('Y-m-d') }}{% endif %}</td>
                <td>{{ commande.montant }}</td>
                <td>{{ commande.adresseC }}</td>#}
                <td>{% if commande.validation %}Yes{% else %}No{% endif %}</td>
                <td>
                <div class="margin">
                                                <div class="btn-group">
                                                    {#pop upp affichage #}
                                                    <button type="button" class="pull-left btn  btn-primary btn-sm" data-toggle="modal" data-target="#myModal{{ commande.id }}">  <i class="fa fa-sticky-note-o"></i> Afficher </button>
                                                    <div class="modal fade" id="myModal{{ commande.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <br><br><br><br>
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                    <h4 class="modal-title" id="myModalLabel"> les Informations de  : {{ commande.codeC }}   </h4>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="row">
                                                                        <div class="col-lg-6">
                                                                            <ul>
                                                                                <li><strong>Client :</strong> {{ commande.user}}</li><br>
                                                                                <li><strong>Les Médicaments :</strong> {{ commande.medicament }}</li><br>
                                                                                <li><strong>Code :</strong> {{ commande.codeC }}</li><br>
                                                                                <li><strong>Date :</strong>{% if commande.dateC %}{{ commande.dateC|date('Y-m-d') }}{% endif %}</li><br>
                                                                                <li><strong>Montant :</strong>{{ commande.montant }}</li><br>
                                                                                <li><strong>Adresse:</strong>{{ commande.adresseC }}</li><br>
                                                                                <li><strong>Décision :</strong>{% if commande.validation %}Yes{% else %}No{% endif %}</li><br>
                                                            
                                                                            </ul>
                                                                        </div>
                                                                        <div class="col-lg-6">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {#endpop up affichage#}
                                                    <br>
                                                    <a href="{{ path('medicament_edit', { 'id': medicament.id }) }}" class="pull-right btn btn-warning  btn-sm">
                                                        <i class="fa  fa-pencil-square-o"></i> Modifier
                                                    </a>
                                                </div>
                                            </div>
                    {#<div class="margin">
                                        <div class="btn-group">
                                            <a href="{{ path('pharmacie_show', { 'id': commande.id }) }}" class="pull-left btn  btn-primary btn-sm">
                                                <i class="fa fa-sticky-note-o"></i> Afficher
                                            </a>
                                            <br>
                                            <a href="{{ path('pharmacie_edit', { 'id': commande.id }) }}" class="pull-right btn btn-warning  btn-sm">
                                                <i class="fa  fa-pencil-square-o"></i> Modifier
                                            </a>
                                        </div>
                    </div>#}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </div>
                </div>
                <a href="{{ path('commande_new') }}" class="pull-right btn btn-Success  btn-sm"><i class="fa fa-plus-circle"></i> Ajouter Une Commande </a>
            </div>
        </div>
    </section>
{% endblock %}
