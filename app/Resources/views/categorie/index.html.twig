{% extends 'base.html.twig' %}

{% block fos_user_content %}
   <section class="content">
        <div class="row">
            <div class="col-md-11">
                <div class="box">
                    <div class="box-header">
                        <h1 class="box-title"> Liste categories</h1>
                        <a href="#" class="pull-right btn btn-info  btn-sm">
                            <i class="fa fa-search"></i> Rechercher
                        </a>
                    </div>
    <div class="box-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead> 
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <div class="margin">
                                        <div class="btn-group">
                                            <a href="{{ path('categorie_show', { 'id': categorie.id }) }}" class="pull-left btn  btn-primary btn-sm">
                                                <i class="fa fa-sticky-note-o"></i> Afficher
                                            </a>
                                            <br>
                                            <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}" class="pull-right btn btn-warning  btn-sm">
                                                <i class="fa  fa-pencil-square-o"></i> Modifier
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </div>
                </div>
                <a href="{{ path('categorie_new') }}" class="pull-right btn btn-Success  btn-sm"><i class="fa fa-plus-circle"></i> Ajouter Une Categorie </a>
            </div>
        </div>
    </section>
{% endblock %}
